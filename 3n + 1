print('Hi!\nthis code is a wrong solution to the collatz conjecture, but from the programming side it is a very interesting topic!\nAt least for me\nIf the code stops, then the collatz hypothesis is not valid\n\nSorry for my English...\n')
input('wrine anything for start\n')
def umm(n):
  x = n
  number_of_num = 1
  while x != 1:
    
    if x == 1:
      number_of_num += 1
      return n
     
    if x % 2 == 0:
      x = x / 2

    if x == 1:
      number_of_num += 1
      return n
      
    if x % 2 != 0:
      x = x * 3 + 1
      
  number_of_num += 1
  return n
  

def r_umm():
  n_of_num = 1
  while 2 == 2:
    print(umm(n_of_num))
    n_of_num += 1

print(r_umm())
